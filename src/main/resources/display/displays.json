{
	//
	// Default to configuration to use if a configuration specific to the run mode is not found.
	//
	"defaultConfiguration": {
		"controlPanelX": 800,
		"controlPanelY": 100,
		"hudX": 100,
		"hudY": 100
	},
	//
	// List of configurations to use for specific run modes.
	//
	"configurations": [
		{
			// DEV places the displays on the same desktop apart from each other.
			"runMode": "DEV",
			"controlPanelX": 800.0,
			"controlPanelY": 100.0,
			"hudX": 100.0,
			"hudY": 100.0
		},
		{
			// PI2B_CP puts both windows on main display but only control panel shown.
			"runMode": "PI2B_CP",
			"controlPanelX": 0.0,
			"controlPanelY": 0.0,
			"hudX": 0.0,
			"hudY": 0.0
		},
		{
			// PI2B_HUD puts both windows on main display but only heads up display shown.
			"runMode": "PI2B_HUD",
			"controlPanelX": 0.0,
			"controlPanelY": 0.0,
			"hudX": 0.0,
			"hudY": 0.0
		}
	]
}
